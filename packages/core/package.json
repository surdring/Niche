{
  "name": "@niche/core",
  "version": "0.0.0",
  "private": true,
  "main": "dist/index.js",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./dist/index.js"
    },
    "./contracts": {
      "types": "./src/contracts/index.ts",
      "import": "./src/contracts/index.ts",
      "require": "./dist/contracts/index.js"
    },
    "./export/markdown": {
      "types": "./src/export/markdown.ts",
      "import": "./src/export/markdown.ts",
      "require": "./dist/export/markdown.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev:prepare": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json -w",
    "lint": "eslint .",
    "test": "vitest run",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
